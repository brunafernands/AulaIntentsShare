<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/g">

    <ImageButton
            android:layout_width="228dp"
            android:layout_height="65dp" app:srcCompat="@android:drawable/ic_menu_share"
            android:id="@+id/btShare"
            android:background="@android:color/holo_red_light" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.528" app:layout_constraintVertical_bias="0.467"/>
    <ImageButton
            android:layout_width="231dp"
            android:layout_height="69dp" app:srcCompat="@android:drawable/ic_menu_gallery"
            android:id="@+id/btActivity"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btShare" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.606"
            app:layout_constraintVertical_bias="0.869" android:background="@android:color/holo_red_light"/>
    <ImageButton
            android:layout_width="232dp"
            android:layout_height="61dp" app:srcCompat="@android:drawable/ic_menu_camera"
            android:id="@+id/btCamera"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btActivity"
            app:layout_constraintVertical_bias="0.725" android:background="@android:color/holo_red_light"
            app:layout_constraintHorizontal_bias="0.544"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtShare"
            android:textStyle="bold|italic" tools:text="Digite aqui" android:textColor="@android:color/holo_red_light"
            android:textSize="30sp" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btShare"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.615"
            app:layout_constraintVertical_bias="0.129"/>
    <ImageButton
            android:layout_width="293dp"
            android:layout_height="68dp" app:srcCompat="?attr/actionModeShareDrawable"
            android:id="@+id/imgShareText"
            android:background="@android:color/holo_red_light" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtShare" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
</android.support.constraint.ConstraintLayout>